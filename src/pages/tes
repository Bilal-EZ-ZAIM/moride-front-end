import React, { useState, useEffect } from "react";
import {
  MapPin,
  Calendar,
  Clock,
  Users,
  Eye,
  Pencil,
  Trash2,
  Search,
  Car,
  Filter,
  ChevronDown,
  AlertCircle,
  CheckCircle2,
  ArrowRight,
  PlusCircle,
  X,
  DollarSign,
  MessageSquare,
  UserCheck,
  ChevronLeft,
  ChevronRight,
  RefreshCw,
  SortAsc,
} from "lucide-react";
import { Button } from "../components/common/Button";
import { useAppDispatch, useAppSelector } from "../hooks";
import { fetchMyBookings } from "../store/features/booking/bookingSlice";

// Define types
interface Applicant {
  _id: string;
  status: "pending" | "accepted" | "rejected";
  driverId: {
    _id: string;
    profile: {
      firstname: string;
      lastname: string;
    };
  };
}

interface Trip {
  _id: string;
  from: string;
  to: string;
  date: string;
  time: string;
  passengers: number;
  tripType: "shared" | "private";
  status: "active" | "completed" | "cancelled";
  priceFrom: string;
  priceTo: string;
  notes?: string;
  createdAt: string;
  applicants: Applicant[];
}

// Badge component
interface BadgeProps {
  children: React.ReactNode;
  variant?: "default" | "success" | "warning" | "danger" | "info";
  className?: string;
}

const Badge: React.FC<BadgeProps> = ({
  children,
  variant = "default",
  className = "",
}) => {
  const variantStyles = {
    default: "bg-gray-100 text-gray-800",
    success: "bg-emerald-100 text-emerald-800",
    warning: "bg-yellow-100 text-yellow-800",
    danger: "bg-red-100 text-red-800",
    info: "bg-blue-100 text-blue-800",
  };

  return (
    <span
      className={`inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium ${variantStyles[variant]} ${className}`}
    >
      {children}
    </span>
  );
};

const MyTrips: React.FC = () => {
  const [searchTerm, setSearchTerm] = useState<string>("");
  const [statusFilter, setStatusFilter] = useState<string>("all");
  const [isFilterOpen, setIsFilterOpen] = useState<boolean>(false);

  const [sortBy, setSortBy] = useState<string>("date");
  const [sortOrder, setSortOrder] = useState<"asc" | "desc">("desc");
  const [selectedTrip, setSelectedTrip] = useState<Trip | null>(null);
  const [isDetailModalOpen, setIsDetailModalOpen] = useState<boolean>(false);
  const [currentPage, setCurrentPage] = useState<number>(1);
  const tripsPerPage = 5;

  // Mock data for demonstration


  const { myBookings, counter } = useAppSelector((state) => state.booking);
  const dispatch = useAppDispatch();
  const [trips, setTrips] = useState<Trip[]>([]);

  useEffect(() => {
    const getData = async () => {
      await dispatch(fetchMyBookings());
    };

    getData();
  }, [dispatch, counter]);

  useEffect(() => {
    if (myBookings && myBookings.length > 0) {
      setTrips(myBookings);
    }
  }, [myBookings]);

  const filteredTrips = trips.filter((trip) => {
    const matchesSearch =
      trip.from.toLowerCase().includes(searchTerm.toLowerCase()) ||
      trip.to.toLowerCase().includes(searchTerm.toLowerCase());

    const matchesStatus =
      statusFilter === "all" || trip.status === statusFilter;

    return matchesSearch && matchesStatus;
  });

  // Sort trips
  const sortedTrips = [...filteredTrips].sort((a, b) => {
    if (sortBy === "date") {
      const dateA = new Date(a.date);
      const dateB = new Date(b.date);
      return sortOrder === "asc"
        ? dateA.getTime() - dateB.getTime()
        : dateB.getTime() - dateA.getTime();
    } else if (sortBy === "price") {
      const priceA = parseInt(a.priceFrom);
      const priceB = parseInt(b.priceFrom);
      return sortOrder === "asc" ? priceA - priceB : priceB - priceA;
    } else if (sortBy === "passengers") {
      return sortOrder === "asc"
        ? a.passengers - b.passengers
        : b.passengers - a.passengers;
    }
    return 0;
  });

  // Pagination
  const indexOfLastTrip = currentPage * tripsPerPage;
  const indexOfFirstTrip = indexOfLastTrip - tripsPerPage;
  const currentTrips = sortedTrips.slice(indexOfFirstTrip, indexOfLastTrip);
  const totalPages = Math.ceil(sortedTrips.length / tripsPerPage);

  const handleDelete = (id: string) => {
    if (window.confirm("Êtes-vous sûr de vouloir supprimer ce trajet ?")) {
      setTrips(trips.filter((trip) => trip._id !== id));
    }
  };

  const handleViewDetails = (trip: Trip) => {
    setSelectedTrip(trip);
    setIsDetailModalOpen(true);
  };

  const handleCloseModal = () => {
    setIsDetailModalOpen(false);
    setSelectedTrip(null);
  };

  const handleSortChange = (criteria: string) => {
    if (sortBy === criteria) {
      setSortOrder(sortOrder === "asc" ? "desc" : "asc");
    } else {
      setSortBy(criteria);
      setSortOrder("desc");
    }
  };

  const handleAccepte = (driverId: string, selectedTrip: Trip) => {
    // Display confirmation window
    if (window.confirm("Voulez-vous accepter cette offre ?")) {
      // Update the applicant status
      const updatedTrips = trips.map((trip) => {
        if (trip._id === selectedTrip._id) {
          const updatedApplicants = trip.applicants.map((applicant) => {
            if (applicant.driverId._id === driverId) {
              return { ...applicant, status: "accepted" as const };
            }
            return applicant;
          });
          return { ...trip, applicants: updatedApplicants };
        }
        return trip;
      });

      setTrips(updatedTrips);
      alert("L'offre a été acceptée avec succès.");
      handleCloseModal();
    }
  };

  const getStatusBadge = (status: string) => {
    switch (status) {
      case "active":
        return (
          <Badge variant="success">
            <CheckCircle2 className="w-3 h-3" />
            Actif
          </Badge>
        );
      case "completed":
        return (
          <Badge variant="info">
            <CheckCircle2 className="w-3 h-3" />
            Terminé
          </Badge>
        );
      case "cancelled":
        return (
          <Badge variant="danger">
            <AlertCircle className="w-3 h-3" />
            Annulé
          </Badge>
        );
      default:
        return (
          <Badge variant="success">
            <CheckCircle2 className="w-3 h-3" />
            Actif
          </Badge>
        );
    }
  };

  const formatDate = (dateString: string) => {
    const options: Intl.DateTimeFormatOptions = {
      year: "numeric",
      month: "long",
      day: "numeric",
    };
    return new Date(dateString).toLocaleDateString("fr-FR", options);
  };

  // Helper function to get driver name from applicant
  const getDriverName = (applicant: Applicant) => {
    if (applicant && applicant.driverId && applicant.driverId.profile) {
      return `${applicant.driverId.profile.firstname} ${applicant.driverId.profile.lastname}`;
    }
    return "Conducteur inconnu";
  };

  return (
    <div className="container mx-auto px-2 sm:px-4 py-4 sm:py-8 max-w-6xl">
      {/* Header with animated gradient border */}
      <div className="mb-4 sm:mb-8 relative">
        <div className="absolute inset-0 rounded-xl sm:rounded-2xl bg-gradient-to-r from-emerald-400 via-blue-500 to-purple-600 opacity-80 blur-sm"></div>
        <div className="relative bg-white rounded-xl sm:rounded-2xl shadow-xl p-3 sm:p-6 border border-gray-100 overflow-hidden">
          <div className="absolute top-0 right-0 w-32 sm:w-64 h-32 sm:h-64 bg-gradient-to-br from-emerald-100 to-blue-100 rounded-full -mr-16 sm:-mr-32 -mt-16 sm:-mt-32 opacity-50"></div>
          <div className="relative">
            <h1 className="text-xl sm:text-3xl font-bold text-gray-900 mb-1 sm:mb-2">
              Mes Trajets
            </h1>
            <p className="text-xs sm:text-base text-gray-600 max-w-2xl">
              Gérez vos trajets créés et suivez les demandes de réservation.
            </p>
            <div className="mt-2 sm:mt-6 flex flex-wrap gap-2">
              <Button className="shadow-sm text-xs">
                <PlusCircle className="w-3 h-3 mr-1" />
                Nouveau
              </Button>
              <Button variant="outline" className="shadow-sm text-xs">
                <RefreshCw className="w-3 h-3 mr-1" />
                Actualiser
              </Button>
            </div>
          </div>
        </div>
      </div>

      {/* Main content */}
      <div className="bg-white rounded-lg sm:rounded-xl shadow-lg p-3 sm:p-6 mb-4 sm:mb-8 border border-gray-100">
        {/* Search and filter bar */}
        <div className="flex flex-col gap-3 mb-4 sm:mb-6">
          <div className="relative w-full">
            <div className="absolute inset-y-0 left-0 pl-2 flex items-center pointer-events-none">
              <Search className="h-4 w-4 text-gray-400" />
            </div>
            <input
              type="text"
              placeholder="Rechercher..."
              className="block w-full pl-8 pr-2 py-1.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent text-xs"
              value={searchTerm}
              onChange={(e) => setSearchTerm(e.target.value)}
            />
          </div>

          <div className="flex flex-wrap gap-2 w-full">
            <div className="relative">
              <button
                onClick={() => setIsFilterOpen(!isFilterOpen)}
                className="flex items-center gap-1 px-2 py-1.5 bg-gray-50 hover:bg-gray-100 rounded-lg border border-gray-200 text-gray-700 text-xs"
              >
                <Filter className="w-3 h-3" />
                <span>Filtrer</span>
                <ChevronDown
                  className={`w-3 h-3 transition-transform duration-200 ${
                    isFilterOpen ? "rotate-180" : ""
                  }`}
                />
              </button>

              {isFilterOpen && (
                <div className="absolute left-0 mt-1 w-40 bg-white rounded-lg shadow-lg z-10 border border-gray-100">
                  <div className="py-1">
                    <button
                      onClick={() => {
                        setStatusFilter("all");
                        setIsFilterOpen(false);
                      }}
                      className={`block px-3 py-1.5 text-xs w-full text-left hover:bg-gray-50 ${
                        statusFilter === "all"
                          ? "bg-emerald-50 text-emerald-700"
                          : "text-gray-700"
                      }`}
                    >
                      Tous les trajets
                    </button>
                    <button
                      onClick={() => {
                        setStatusFilter("active");
                        setIsFilterOpen(false);
                      }}
                      className={`block px-3 py-1.5 text-xs w-full text-left hover:bg-gray-50 ${
                        statusFilter === "active"
                          ? "bg-emerald-50 text-emerald-700"
                          : "text-gray-700"
                      }`}
                    >
                      Trajets actifs
                    </button>
                    <button
                      onClick={() => {
                        setStatusFilter("completed");
                        setIsFilterOpen(false);
                      }}
                      className={`block px-3 py-1.5 text-xs w-full text-left hover:bg-gray-50 ${
                        statusFilter === "completed"
                          ? "bg-emerald-50 text-emerald-700"
                          : "text-gray-700"
                      }`}
                    >
                      Trajets terminés
                    </button>
                    <button
                      onClick={() => {
                        setStatusFilter("cancelled");
                        setIsFilterOpen(false);
                      }}
                      className={`block px-3 py-1.5 text-xs w-full text-left hover:bg-gray-50 ${
                        statusFilter === "cancelled"
                          ? "bg-emerald-50 text-emerald-700"
                          : "text-gray-700"
                      }`}
                    >
                      Trajets annulés
                    </button>
                  </div>
                </div>
              )}
            </div>

            <div className="relative">
              <button
                className="flex items-center gap-1 px-2 py-1.5 bg-gray-50 hover:bg-gray-100 rounded-lg border border-gray-200 text-gray-700 text-xs"
                onClick={() => handleSortChange("date")}
              >
                <SortAsc className="w-3 h-3" />
                <span>Trier</span>
                <ChevronDown
                  className={`w-3 h-3 transition-transform duration-200 ${
                    sortBy === "date" && sortOrder === "desc"
                      ? "rotate-180"
                      : ""
                  }`}
                />
              </button>
            </div>
          </div>
        </div>

        {/* Stats summary */}
        <div className="grid grid-cols-1 sm:grid-cols-3 gap-2 sm:gap-4 mb-4 sm:mb-6">
          <div className="bg-gradient-to-br from-emerald-50 to-emerald-100 p-2 sm:p-4 rounded-lg border border-emerald-200">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-emerald-700 text-xs font-medium">
                  Trajets actifs
                </p>
                <h3 className="text-lg sm:text-2xl font-bold text-emerald-900 mt-0.5">
                  {trips.filter((t) => t.status === "active").length}
                </h3>
              </div>
              <div className="bg-emerald-200 p-1.5 sm:p-3 rounded-full">
                <Car className="w-4 h-4 sm:w-6 sm:h-6 text-emerald-700" />
              </div>
            </div>
          </div>

          <div className="bg-gradient-to-br from-blue-50 to-blue-100 p-2 sm:p-4 rounded-lg border border-blue-200">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-blue-700 text-xs font-medium">Demandes</p>
                <h3 className="text-lg sm:text-2xl font-bold text-blue-900 mt-0.5">
                  {trips.reduce((acc, trip) => acc + trip.applicants.length, 0)}
                </h3>
              </div>
              <div className="bg-blue-200 p-1.5 sm:p-3 rounded-full">
                <UserCheck className="w-4 h-4 sm:w-6 sm:h-6 text-blue-700" />
              </div>
            </div>
          </div>

          <div className="bg-gradient-to-br from-purple-50 to-purple-100 p-2 sm:p-4 rounded-lg border border-purple-200">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-purple-700 text-xs font-medium">Revenu</p>
                <h3 className="text-lg sm:text-2xl font-bold text-purple-900 mt-0.5">
                  {trips.reduce(
                    (acc, trip) =>
                      acc + Number(trip.priceFrom) * trip.passengers,
                    0
                  )}{" "}
                  MAD
                </h3>
              </div>
              <div className="bg-purple-200 p-1.5 sm:p-3 rounded-full">
                <DollarSign className="w-4 h-4 sm:w-6 sm:h-6 text-purple-700" />
              </div>
            </div>
          </div>
        </div>

        {/* Empty state */}
        {filteredTrips.length === 0 ? (
          <div className="text-center py-6 sm:py-16 bg-gray-50 rounded-lg border border-dashed border-gray-200">
            <div className="inline-flex items-center justify-center w-12 h-12 sm:w-20 sm:h-20 rounded-full bg-gray-100 mb-3">
              <Car className="w-6 h-6 sm:w-10 sm:h-10 text-gray-400" />
            </div>
            <h3 className="text-base sm:text-xl font-medium text-gray-900 mb-2">
              Aucun trajet trouvé
            </h3>
            <p className="text-gray-500 max-w-md mx-auto mb-4 text-xs sm:text-base px-2">
              {searchTerm
                ? "Aucun trajet ne correspond à votre recherche."
                : "Vous n'avez pas encore créé de trajets."}
            </p>
            <Button size="sm">
              <PlusCircle className="w-3 h-3 mr-1" />
              Créer un trajet
            </Button>
          </div>
        ) : (
          <>
            {/* Trip cards */}
            <div className="grid gap-3 sm:gap-6">
              {currentTrips.map((trip) => (
                <div
                  key={trip._id}
                  className="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden group hover:border-emerald-300 hover:shadow-md transition-all duration-300"
                >
                  <div className="p-3 sm:p-6">
                    <div className="flex flex-col gap-2 sm:gap-4 mb-3 sm:mb-6">
                      <div className="flex items-start justify-between gap-2">
                        <div className="flex flex-col">
                          <div className="flex items-center gap-1 flex-wrap">
                            <h3 className="text-sm sm:text-xl font-bold text-gray-900 break-all">
                              {trip.from.charAt(0).toUpperCase() +
                                trip.from.slice(1)}{" "}
                              <ArrowRight className="inline w-3 h-3 mx-0.5" />{" "}
                              {trip.to.charAt(0).toUpperCase() +
                                trip.to.slice(1)}
                            </h3>
                          </div>
                          <div className="mt-1">
                            {getStatusBadge(trip.status)}
                          </div>
                          <div className="flex flex-wrap gap-1.5 mt-1 text-xs text-gray-600">
                            <span className="inline-flex items-center gap-0.5">
                              <Calendar className="w-3 h-3" />
                              {formatDate(trip.date)}
                            </span>
                            <span className="inline-flex items-center gap-0.5">
                              <Clock className="w-3 h-3" />
                              {trip.time}
                            </span>
                            <span className="inline-flex items-center gap-0.5">
                              <Users className="w-3 h-3" />
                              {trip.passengers}
                            </span>
                          </div>
                        </div>
                      </div>

                      <div className="flex flex-wrap gap-1.5">
                        <Button
                          variant="outline"
                          size="sm"
                          className="flex items-center gap-0.5 bg-white text-xs"
                          onClick={() => handleViewDetails(trip)}
                        >
                          <Eye className="w-3 h-3" />
                          Détails
                        </Button>
                        <Button
                          variant="outline"
                          size="sm"
                          className="flex items-center gap-0.5 text-blue-600 border-blue-200 hover:bg-blue-50 bg-white text-xs"
                        >
                          <Pencil className="w-3 h-3" />
                          Modifier
                        </Button>
                        <Button
                          variant="outline"
                          size="sm"
                          className="flex items-center gap-0.5 text-red-600 border-red-200 hover:bg-red-50 bg-white text-xs"
                          onClick={() => handleDelete(trip._id)}
                        >
                          <Trash2 className="w-3 h-3" />
                          Supprimer
                        </Button>
                      </div>
                    </div>

                    <div className="grid grid-cols-1 gap-2 sm:gap-4">
                      <div className="bg-gray-50 p-2 sm:p-4 rounded-lg border border-gray-100">
                        <h4 className="font-medium text-gray-700 mb-1.5 sm:mb-3 flex items-center text-xs sm:text-base">
                          <MapPin className="w-3 h-3 sm:w-4 sm:h-4 mr-1 text-emerald-600" />
                          Détails du trajet
                        </h4>
                        <div className="space-y-1.5 sm:space-y-3 text-xs">
                          <div className="flex items-center justify-between">
                            <span className="text-gray-600">Type:</span>
                            <Badge
                              variant={
                                trip.tripType === "shared" ? "info" : "default"
                              }
                            >
                              {trip.tripType === "shared" ? "Partagé" : "Privé"}
                            </Badge>
                          </div>
                          <div className="flex items-center justify-between">
                            <span className="text-gray-600">Prix:</span>
                            <span className="font-medium text-emerald-600">
                              {trip.priceFrom}-{trip.priceTo} MAD
                            </span>
                          </div>
                          <div className="flex items-center justify-between">
                            <span className="text-gray-600">Demandes:</span>
                            <span className="font-medium">
                              {trip.applicants.length}
                            </span>
                          </div>
                        </div>
                      </div>

                      {trip.applicants.length > 0 && (
                        <div className="bg-gray-50 p-2 sm:p-4 rounded-lg border border-gray-100">
                          <div className="flex items-center justify-between mb-1.5 sm:mb-3">
                            <h4 className="font-medium text-gray-700 flex items-center text-xs sm:text-base">
                              <UserCheck className="w-3 h-3 sm:w-4 sm:h-4 mr-1 text-emerald-600" />
                              Demandes
                            </h4>
                            <Button
                              size="sm"
                              className="text-xs py-0.5 px-1.5"
                              onClick={() => handleViewDetails(trip)}
                            >
                              Voir
                            </Button>
                          </div>

                          <div className="space-y-1.5">
                            {trip.applicants.slice(0, 1).map((applicant) => (
                              <div
                                key={applicant._id}
                                className="flex items-center justify-between p-1.5 bg-white rounded-lg border border-gray-100"
                              >
                                <span className="text-xs font-medium truncate max-w-[100px]">
                                  {getDriverName(applicant)}
                                </span>
                                {applicant.status === "pending" ? (
                                  <Badge variant="warning">En attente</Badge>
                                ) : applicant.status === "accepted" ? (
                                  <Badge variant="success">Approuvé</Badge>
                                ) : (
                                  <Badge variant="danger">Rejeté</Badge>
                                )}
                              </div>
                            ))}
                            {trip.applicants.length > 1 && (
                              <div className="text-center pt-1">
                                <span className="text-xs text-gray-500">
                                  +{trip.applicants.length - 1} autres
                                </span>
                              </div>
                            )}
                          </div>
                        </div>
                      )}
                    </div>
                  </div>
                </div>
              ))}
            </div>

            {/* Pagination */}
            {totalPages > 1 && (
              <div className="flex flex-col sm:flex-row items-center justify-between mt-4 border-t border-gray-200 pt-3 gap-2">
                <div className="text-xs text-gray-600 order-2 sm:order-1">
                  {indexOfFirstTrip + 1} à{" "}
                  {Math.min(indexOfLastTrip, sortedTrips.length)} sur{" "}
                  {sortedTrips.length}
                </div>
                <div className="flex items-center gap-1 order-1 sm:order-2">
                  <Button
                    variant="outline"
                    size="sm"
                    onClick={() => setCurrentPage(Math.max(1, currentPage - 1))}
                    disabled={currentPage === 1}
                    className={`text-xs py-0.5 px-1.5 ${
                      currentPage === 1 ? "opacity-50 cursor-not-allowed" : ""
                    }`}
                  >
                    <ChevronLeft className="w-3 h-3" />
                  </Button>
                  {Array.from({ length: totalPages }, (_, i) => i + 1).map(
                    (page) => (
                      <Button
                        key={page}
                        size="sm"
                        onClick={() => setCurrentPage(page)}
                        className={`text-xs py-0.5 px-1.5 ${
                          currentPage === page ? "bg-emerald-600" : ""
                        }`}
                      >
                        {page}
                      </Button>
                    )
                  )}
                  <Button
                    variant="outline"
                    size="sm"
                    onClick={() =>
                      setCurrentPage(Math.min(totalPages, currentPage + 1))
                    }
                    disabled={currentPage === totalPages}
                    className={`text-xs py-0.5 px-1.5 ${
                      currentPage === totalPages
                        ? "opacity-50 cursor-not-allowed"
                        : ""
                    }`}
                  >
                    <ChevronRight className="w-3 h-3" />
                  </Button>
                </div>
              </div>
            )}
          </>
        )}
      </div>

      {/* Trip detail modal */}
      {isDetailModalOpen && selectedTrip && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-2">
          <div className="bg-white rounded-lg shadow-2xl w-full max-h-[90vh] overflow-y-auto max-w-[95vw] sm:max-w-4xl">
            <div className="sticky top-0 bg-white border-b border-gray-200 p-2 sm:p-4 flex items-center justify-between z-10">
              <h3 className="text-sm sm:text-xl font-bold text-gray-900 truncate">
                Détails du trajet
              </h3>
              <button
                onClick={handleCloseModal}
                className="p-1 rounded-full hover:bg-gray-100 transition-colors"
              >
                <X className="w-4 h-4 text-gray-500" />
              </button>
            </div>

            <div className="p-2 sm:p-6">
              <div className="bg-gradient-to-r from-emerald-50 to-blue-50 p-2 sm:p-4 rounded-lg mb-3 sm:mb-6">
                <div className="flex flex-col gap-2">
                  <div>
                    <div className="flex items-center gap-1 mb-1">
                      <h2 className="text-sm sm:text-2xl font-bold text-gray-900 break-all">
                        {selectedTrip.from.charAt(0).toUpperCase() +
                          selectedTrip.from.slice(1)}{" "}
                        <ArrowRight className="inline w-3 h-3 sm:w-5 sm:h-5 mx-0.5" />{" "}
                        {selectedTrip.to.charAt(0).toUpperCase() +
                          selectedTrip.to.slice(1)}
                      </h2>
                    </div>
                    <div>{getStatusBadge(selectedTrip.status)}</div>
                    <div className="flex flex-wrap gap-1.5 mt-1 text-xs text-gray-600">
                      <span className="inline-flex items-center gap-0.5">
                        <Calendar className="w-3 h-3" />
                        {formatDate(selectedTrip.date)}
                      </span>
                      <span className="inline-flex items-center gap-0.5">
                        <Clock className="w-3 h-3" />
                        {selectedTrip.time}
                      </span>
                      <span className="inline-flex items-center gap-0.5">
                        <Users className="w-3 h-3" />
                        {selectedTrip.passengers}
                      </span>
                      <span className="inline-flex items-center gap-0.5">
                        <Car className="w-3 h-3" />
                        {selectedTrip.tripType === "shared"
                          ? "Partagé"
                          : "Privé"}
                      </span>
                    </div>
                  </div>

                  <div className="flex flex-wrap gap-1.5 mt-1">
                    <Button
                      variant="outline"
                      size="sm"
                      className="flex items-center gap-0.5 text-blue-600 border-blue-200 hover:bg-blue-50 text-xs"
                    >
                      <Pencil className="w-3 h-3" />
                      Modifier
                    </Button>
                    <Button
                      variant="outline"
                      size="sm"
                      className="flex items-center gap-0.5 text-red-600 border-red-200 hover:bg-red-50 text-xs"
                      onClick={() => {
                        handleDelete(selectedTrip._id);
                        handleCloseModal();
                      }}
                    >
                      <Trash2 className="w-3 h-3" />
                      Supprimer
                    </Button>
                  </div>
                </div>
              </div>

              <div className="grid grid-cols-1 gap-3 sm:gap-6 mb-3 sm:mb-6">
                <div>
                  <h4 className="text-sm sm:text-lg font-semibold text-gray-900 mb-1.5 sm:mb-4 flex items-center">
                    <MapPin className="w-3 h-3 sm:w-5 sm:h-5 mr-1 text-emerald-600" />
                    Informations du trajet
                  </h4>
                  <div className="bg-gray-50 rounded-lg p-2 sm:p-4 border border-gray-200">
                    <dl className="space-y-1.5 sm:space-y-4 text-xs sm:text-sm">
                      <div className="flex justify-between">
                        <dt className="font-medium text-gray-600">Départ:</dt>
                        <dd className="text-gray-900">
                          {selectedTrip.from.charAt(0).toUpperCase() +
                            selectedTrip.from.slice(1)}
                        </dd>
                      </div>
                      <div className="flex justify-between">
                        <dt className="font-medium text-gray-600">
                          Destination:
                        </dt>
                        <dd className="text-gray-900">
                          {selectedTrip.to.charAt(0).toUpperCase() +
                            selectedTrip.to.slice(1)}
                        </dd>
                      </div>
                      <div className="flex justify-between">
                        <dt className="font-medium text-gray-600">Date:</dt>
                        <dd className="text-gray-900">
                          {formatDate(selectedTrip.date)}
                        </dd>
                      </div>
                      <div className="flex justify-between">
                        <dt className="font-medium text-gray-600">Heure:</dt>
                        <dd className="text-gray-900">{selectedTrip.time}</dd>
                      </div>
                      <div className="flex justify-between">
                        <dt className="font-medium text-gray-600">
                          Passagers:
                        </dt>
                        <dd className="text-gray-900">
                          {selectedTrip.passengers}
                        </dd>
                      </div>
                      <div className="flex justify-between">
                        <dt className="font-medium text-gray-600">Type:</dt>
                        <dd className="text-gray-900">
                          {selectedTrip.tripType === "shared"
                            ? "Trajet partagé"
                            : "Trajet privé"}
                        </dd>
                      </div>
                      <div className="flex justify-between">
                        <dt className="font-medium text-gray-600">Statut:</dt>
                        <dd className="text-gray-900">
                          {getStatusBadge(selectedTrip.status)}
                        </dd>
                      </div>
                      <div className="flex justify-between">
                        <dt className="font-medium text-gray-600">Créé le:</dt>
                        <dd className="text-gray-900">
                          {formatDate(selectedTrip.createdAt)}
                        </dd>
                      </div>
                    </dl>
                  </div>
                </div>

                <div>
                  <h4 className="text-sm sm:text-lg font-semibold text-gray-900 mb-1.5 sm:mb-4 flex items-center">
                    <DollarSign className="w-3 h-3 sm:w-5 sm:h-5 mr-1 text-emerald-600" />
                    Tarification et notes
                  </h4>
                  <div className="bg-gray-50 rounded-lg p-2 sm:p-4 border border-gray-200 mb-2 sm:mb-4">
                    <dl className="space-y-1.5 sm:space-y-4 text-xs sm:text-sm">
                      <div className="flex justify-between">
                        <dt className="font-medium text-gray-600">
                          Prix par personne:
                        </dt>
                        <dd className="font-semibold text-emerald-600">
                          {selectedTrip.priceFrom}-{selectedTrip.priceTo} MAD
                        </dd>
                      </div>
                      <div className="flex justify-between">
                        <dt className="font-medium text-gray-600">
                          Revenu potentiel:
                        </dt>
                        <dd className="font-semibold text-emerald-600">
                          {Number(selectedTrip.priceFrom) *
                            selectedTrip.passengers}
                          -
                          {Number(selectedTrip.priceTo) *
                            selectedTrip.passengers}{" "}
                          MAD
                        </dd>
                      </div>
                    </dl>
                  </div>

                  {selectedTrip.notes && (
                    <div>
                      <h5 className="text-xs sm:text-md font-medium text-gray-900 mb-1 flex items-center">
                        <MessageSquare className="w-3 h-3 sm:w-4 sm:h-4 mr-1 text-emerald-600" />
                        Notes
                      </h5>
                      <div className="bg-gray-50 rounded-lg p-2 sm:p-4 border border-gray-200">
                        <p className="text-xs text-gray-700">
                          {selectedTrip.notes}
                        </p>
                      </div>
                    </div>
                  )}
                </div>
              </div>

              <div>
                <h4 className="text-sm sm:text-lg font-semibold text-gray-900 mb-1.5 sm:mb-4 flex items-center">
                  <UserCheck className="w-3 h-3 sm:w-5 sm:h-5 mr-1 text-emerald-600" />
                  Demandes ({selectedTrip.applicants.length})
                </h4>

                {selectedTrip.applicants.length === 0 ? (
                  <div className="bg-gray-50 rounded-lg p-3 sm:p-8 border border-dashed border-gray-200 text-center">
                    <p className="text-xs text-gray-500">
                      Aucune demande de réservation
                    </p>
                  </div>
                ) : (
                  <div className="bg-gray-50 rounded-lg border border-gray-200 overflow-hidden">
                    <div className="grid grid-cols-3 gap-2 p-2 border-b border-gray-200 bg-gray-100 text-xs">
                      <div className="font-medium text-gray-700">
                        Conducteur
                      </div>
                      <div className="font-medium text-gray-700">Statut</div>
                      <div className="font-medium text-gray-700">Actions</div>
                    </div>

                    <div className="divide-y divide-gray-200">
                      {selectedTrip.applicants.map((applicant) => (
                        <div
                          key={applicant._id}
                          className="grid grid-cols-3 gap-2 p-2 items-center text-xs"
                        >
                          <div className="font-medium truncate max-w-[80px]">
                            {getDriverName(applicant)}
                          </div>
                          <div>
                            {applicant.status === "pending" ? (
                              <Badge variant="warning">En attente</Badge>
                            ) : applicant.status === "accepted" ? (
                              <Badge variant="success">Approuvé</Badge>
                            ) : applicant.status === "rejected" ? (
                              <Badge variant="danger">Rejeté</Badge>
                            ) : (
                              <Badge variant="default">Inconnu</Badge>
                            )}
                          </div>
                          <div className="flex flex-wrap gap-1">
                            {applicant.status === "pending" ? (
                              <>
                                <Button
                                  size="sm"
                                  className="text-xs py-0.5 px-1.5"
                                  onClick={() =>
                                    handleAccepte(
                                      applicant.driverId._id,
                                      selectedTrip
                                    )
                                  }
                                >
                                  OK
                                </Button>
                                <Button
                                  variant="outline"
                                  size="sm"
                                  className="text-xs py-0.5 px-1.5 text-red-600 border-red-200 hover:bg-red-50"
                                >
                                  Non
                                </Button>
                              </>
                            ) : (
                              <Button
                                variant="outline"
                                size="sm"
                                className="text-xs py-0.5 px-1.5"
                              >
                                Contact
                              </Button>
                            )}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>

            <div className="border-t border-gray-200 p-2 sm:p-4 flex justify-end">
              <Button
                variant="outline"
                size="sm"
                onClick={handleCloseModal}
                className="text-xs"
              >
                Fermer
              </Button>
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

export default MyTrips;
